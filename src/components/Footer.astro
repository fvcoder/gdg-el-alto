---
import { Icon } from 'astro-icon/components';
import { networkLinks } from '../content/networkLinks';
---

<footer class="mt-10 pb-4">
    <ul class="max-w-5xl mx-auto flex items-center flex-wrap justify-center mb-1 gap-1">
        {networkLinks.map((item) => (
            <li>
                <a href={item.href} target="_blank" class="p-2 block rounded-md" aria-label={`Link to social Network: ${item.icon.replace("simple-icons:", "")}`}>
                    <Icon name={item.icon} width={20} height={20} />
                </a>
            </li>
        ))}
    </ul>
    <div class="text-center">
        <p class="text-[#57BEA8] font-semibold">Gdg El Alto</p>
        <p class="text-sm text-[#5D8EEE]">Google Developer Group El Alto</p>
        <p class="text-sm">2025</p>
    </div>
</footer>